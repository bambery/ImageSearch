<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spinner_label_size"
        android:id="@+id/tvSize"
        android:textSize="@dimen/filter_text"
        android:textIsSelectable="false"
        android:layout_margin="5dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spSize"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvSize"
        android:layout_toEndOf="@+id/tvSize"
        android:textSize="@dimen/filter_text"
        android:layout_alignBaseline="@+id/tvSize"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spinner_label_color_filter"
        android:id="@+id/tvColors"
        android:textSize="@dimen/filter_text"
        android:textIsSelectable="false"
        android:layout_below="@+id/tvSize"
        android:layout_margin="5dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spColors"
        android:layout_toRightOf="@+id/tvColors"
        android:layout_toEndOf="@+id/tvColors"
        android:textSize="@dimen/filter_text"
        android:layout_alignBaseline="@+id/tvColors"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spinner_label_image_type"
        android:id="@+id/tvType"
        android:textSize="@dimen/filter_text"
        android:textIsSelectable="false"
        android:layout_below="@+id/tvColors"
        android:layout_margin="5dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spType"
        android:layout_toRightOf="@+id/tvType"
        android:layout_toEndOf="@+id/tvType"
        android:textSize="@dimen/filter_text"
        android:layout_alignBaseline="@+id/tvType"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_entry_site_filter"
        android:id="@+id/tvSiteFilter"
        android:textSize="@dimen/filter_text"
        android:textIsSelectable="false"
        android:layout_margin="5dp"
        android:layout_alignTop="@+id/etSiteFilter"
        android:layout_alignBottom="@+id/etSiteFilter"
        android:gravity="center_vertical"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etSiteFilter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/filter_text"
        android:layout_toRightOf="@+id/tvSiteFilter"
        android:layout_below="@+id/tvType"/>

</RelativeLayout>