<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvSize"
        android:textSize="@dimen/filter_text"
        android:textIsSelectable="false"
        android:layout_margin="5dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spSize"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvSize"
        android:layout_toEndOf="@+id/tvSize"
        android:textSize="@dimen/filter_text"
        android:layout_alignBaseline="@+id/tvSize"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvColors"
        android:textSize="@dimen/filter_text"
        android:textIsSelectable="false"
        android:layout_below="@+id/tvSize"
        android:layout_margin="5dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spColors"
        android:layout_toRightOf="@+id/tvColors"
        android:layout_toEndOf="@+id/tvColors"
        android:textSize="@dimen/filter_text"
        android:layout_alignBaseline="@+id/tvColors"
        android:layout_margin="5dp"/>

</RelativeLayout>